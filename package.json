{
  "name": "coding-agent-sdk",
  "version": "0.2.4",
  "description": "Build agentic workflows that delegate to your users' existing coding agents (Claude Code, Codex, Gemini).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "coding-agent-sdk": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "claude",
    "codex",
    "gemini",
    "ai",
    "coding-agent",
    "llm",
    "sdk",
    "cli"
  ],
  "author": "Jude Gao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaojude/coding-agent-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/gaojude/coding-agent-sdk/issues"
  },
  "homepage": "https://github.com/gaojude/coding-agent-sdk#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
