{
  "name": "coding-agent-sdk",
  "version": "1.0.0",
  "description": "Build agentic workflows on top of the Agent Client Protocol (ACP). Works with Claude Code, Codex CLI, Gemini CLI, and other ACP-compliant agents.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "acp",
    "agent-client-protocol",
    "claude",
    "codex",
    "gemini",
    "ai",
    "coding-agent",
    "sdk"
  ],
  "author": "Jude Gao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaojude/coding-agent-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/gaojude/coding-agent-sdk/issues"
  },
  "homepage": "https://github.com/gaojude/coding-agent-sdk#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.12.0"
  }
}
